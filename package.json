{
  "name": "github-board-slack-notifications",
  "version": "1.0.0",
  "description": "The purpose of this project is to sent notifications to a Slack channel for any changes that are performed in a Github board (Projects beta). The Github board and Slack channel pairs are configurable.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "test": "tap",
    "prepare": "husky install",
    "build": "esbuild src/app.js --bundle --minify --platform=node --target=node16 --outbase=src --outdir=dist",
    "cdk": "cdk",
    "deploy": "npm run build && cdk deploy",
    "deploy:cd": "npm run build && cdk deploy --require-approval never",
    "diff": "cdk diff",
    "lint:fix": "eslint . --fix",
    "synth": "npm run build && cdk synth",
    "dev": "fastify start -w -l info -P src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/github-board-slack-notifications.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/github-board-slack-notifications/issues"
  },
  "homepage": "https://github.com/nearform/github-board-slack-notifications#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@istanbuljs/esm-loader-hook": "^0.2.0",
    "aws-cdk": "^2.35.0",
    "esbuild": "^0.14.53",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "tap": "^16.3.0"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "dependencies": {
    "@fastify/autoload": "^5.1.0",
    "@fastify/cors": "^8.1.0",
    "@fastify/env": "^4.0.0",
    "@fastify/sensible": "^5.1.0",
    "@octokit/auth-app": "^4.0.4",
    "@octokit/graphql": "^5.0.0",
    "@slack/bolt": "^3.12.1",
    "aws-cdk-lib": "^2.35.0",
    "constructs": "^10.1.67",
    "desm": "^1.3.0",
    "env-schema": "^5.0.0",
    "fastify": "^4.3.0",
    "fastify-cli": "^4.4.0",
    "fastify-plugin": "^4.0.0",
    "fluent-json-schema": "^3.1.0",
    "http-errors": "^2.0.0"
  }
}
